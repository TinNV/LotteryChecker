# Local app runtime
HOST=127.0.0.1
PORT=5000

# Rate limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW_SECONDS=60
RATE_LIMIT_MAX_REQUESTS_PER_WINDOW=120
RATE_LIMIT_POST_ROOT_MAX_REQUESTS_PER_WINDOW=20

# Admin dashboard auth
ADMIN_USER=admin
ADMIN_PASSWORD=change_me

# DynamoDB search history
AWS_REGION=ap-northeast-1
DYNAMODB_SEARCH_TABLE=lottery-checker-search-history
SEARCH_HISTORY_TTL_DAYS=30
TRAFFIC_HISTORY_TTL_DAYS=30
TRAFFIC_LOOKBACK_MINUTES=1440

# HTTPS deploy (used by deploy/ec2/deploy-https.sh and update-https.sh)
DOMAIN=lottery.example.com
LETSENCRYPT_EMAIL=you@example.com

# HTTP deploy port mapping (deploy/ec2/docker-compose.yml)
# APP_PORT=80
